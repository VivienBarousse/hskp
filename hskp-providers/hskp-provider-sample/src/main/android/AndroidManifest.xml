<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aperigeek.hskp.provider.sample"
          android:versionCode="1"
          android:versionName="1.0">

    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <activity android:name=".SampleProvider"
                  android:icon="@drawable/icon"
                  android:label="@string/sample_provider"
                  android:exported="true">
            <intent-filter>
                <action android:name="com.aperigeek.hskp.Provider" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.aperigeek.hskp.PROVIDER" />
            </intent-filter>
        </activity>

        <receiver android:name=".SampleReceiver">
            <intent-filter>
                <action android:name="com.aperigeek.hskp.receiver.Hotspot" />
            </intent-filter>
        </receiver>

    </application>

    <uses-sdk android:minSdkVersion="8" />
    
</manifest>
